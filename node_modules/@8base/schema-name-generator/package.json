{
  "name": "@8base/schema-name-generator",
  "version": "0.1.23",
  "author": "8base",
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build -- --watch",
    "test": "jest --no-cache --coverage",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:fix": "npm run tslint -- --fix",
    "check": "npm run tslint && npm run test",
    "upload": "npm version patch && git push --follow-tags",
    "preversion": "npm run tslint",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "lodash": "^4.17.19",
    "pluralize": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/pluralize": "0.0.29",
    "jest": "^25.5.4",
    "ts-jest": "^25.5.1",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "clearMocks": true
  }
}
